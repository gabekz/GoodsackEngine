{
    "Animator": {
        "int": [ "cntTime", "cntKeyframeIndex", "nxtKeyframeIndex" ],
        "Resource": [ "cntAnimation"],
        "float": [ "timerStart", "timerNow" ]
    },

    "AudioListener": {
        "int": ["a"]
    },

    "AudioSource": {
        "uint": ["bufferId"],
        "string": ["filePath"],
        "bool": ["looping"]
    },

    "BoneAttachment": {
        "uint": ["bone_id"],
        "entity": ["entity_skeleton"]
    },

    "Camera": {
        "int": ["screenWidth", "screenHeight"],
        "uint": ["renderLayer"],
        "float": ["fov", "nearZ", "farZ", "shake_amount"],
        "vec3": ["axisUp", "center", "front"],
        "mat4": ["model", "view", "proj"],
        "Resource": ["uniformBuffer", "uniformBufferMemory", "uniformBufferMapped"]
    },

    "CameraLook": {
        "int": ["firstMouse"],
        "float": ["sensitivity", "lastX", "lastY", "yaw", "pitch"]
    },

    "CameraMovement": {
        "float": ["speed"]
    },
    "Collider": {
        "int": ["type"],
        "Resource": ["p_collider"],
        "bool": ["is_colliding"]
    },

    "Enemy": {
        "int": ["enemy_type"],
        "Resource": ["projectile_model", "projectile_material"]
    },

    "EntityReference": {
        "entity": ["entity_ref_id"]
    },

    "Health": {
        "int": ["current_health", "max_health"],
        "bool": ["is_alive"]
    },

    "Light": {
        "vec4": ["color"],
        "uint": ["type"]
    },

    "Model": {
        "Resource": [ "material", "mesh", "pModel", "vkVBO"],
        "string": ["modelPath"],
        "uint": ["vbo"],

        "settings": {
            "bool": ["cast_shadows", "receive_shadows"]
        }
    },

    "PlayerController": {
        "float": ["speed"],
        "int": ["walk_direction"],
        "bool": ["is_grounded", "is_jumping"]
    },

    "RenderLayer": {
        "uint": ["renderLayer"]
    },

    "Rigidbody": {
        "Resource": [ "solver" ],
        "vec3": [ "gravity", "angular_velocity", "linear_velocity", "force" ],
        "float": [ "mass", "static_friction", "dynamic_friction" ]
    },

    "SwordController": {
        "int": ["last_direction", "weapon_state"],
        "float": ["state_timer", "charge_time"],
        "entity": [ "entity_camera", "entity_flock" ]
    },

    "Transform": {
        "vec3": [ "position", "orientation", "scale", "forward" ],
        "mat4": [ "model" ],
        "bool": [ "hasParent" ],
        "Resource": [ "parent" ]
    },

    "Weapon": {
        "float": ["damage"],
        "vec3": ["pos_starting", "rot_starting"],
        "entity": [ "entity_camera" ]
    },

    "WeaponSway": {
        "float": ["sway_amount"]
    }

}
