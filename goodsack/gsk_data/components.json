{
    "Animator": {
        "Resource": [ "cntAnimation", "p_animation_set" ],
        "int": [ "cntTime", "cntKeyframeIndex", "nxtKeyframeIndex" ],
        "uint": [ "animation_index" ],
        "float": [ "timerStart", "timerNow" ],
        "bool": ["is_transition_delayed", "is_looping", "is_playing", "force_replay", "is_holding_end_frame" ]
    },

    "AudioListener": {
        "int": ["a"]
    },

    "AudioSource": {
        "uint": ["buffer_audio", "buffer_source"],
        "float": ["min_distance, max_distance", "pitch"],
        "string": ["filePath"],
        "bool": ["is_looping", "is_playing", "play_on_start"],
        "Resource": ["audio_clip"]
    },

    "Bane": {
        "int": ["damage"],
        "bool": ["is_instant_kill"]
    },

    "BoneAttachment": {
        "uint": ["bone_id"],
        "entity": ["entity_skeleton"],
        "Resource": ["p_joint"]
    },

    "Camera": {
        "int": ["screenWidth", "screenHeight"],
        "uint": ["renderLayer"],
        "float": ["fov", "nearZ", "farZ", "shake_amount"],
        "vec3": ["axisUp", "center", "front"],
        "mat4": ["model", "view", "proj"],
        "Resource": ["uniformBuffer", "uniformBufferMemory", "uniformBufferMapped"]
    },

    "CameraLook": {
        "int": ["firstMouse"],
        "float": ["sensitivity", "lastX", "lastY", "yaw", "pitch"]
    },

    "CameraMovement": {
        "float": ["speed"]
    },
    "Collider": {
        "int": ["type"],
        "Resource": ["pCollider", "p_mesh"],
        "bool": ["isColliding", "is_trigger"],
        "float": ["radius"],
        "vec3": ["box_bounds_min", "box_bounds_max"]
    },

    "Enemy": {
        "int": ["enemy_type"],
        "bool": ["is_wep_loaded"],
        "vec3": ["hit_position"]
    },

    "EntityReference": {
        "entity": ["entity_ref_id"]
    },

    "Flammable": {
        "float": ["burn_speed", "cooldown_speed", "current_heat", "ignition_point", "max_heat"],
        "bool": ["is_burning"],
        "entity": ["entity_emitter_id"]
    },

    "Health": {
        "int": ["current_health", "last_health", "max_health"],
        "bool": ["is_alive", "event_health_change"]
    },

    "Light": {
        "vec4": ["color"],
        "float": ["intensity"],
        "uint": ["type", "light_index"]
    },

    "Model": {
        "Resource": [ "material", "mesh", "pModel", "vkVBO", "_skeleton"],
        "string": ["modelPath"],
        "uint": ["vbo"],
        "bool": ["cast_shadows"],

        "settings": {
            "bool": ["cast_shadows", "receive_shadows"]
        }
    },

    "ParticleEmitter": {
        "Resource": ["p_settings", "p_particle_system", "p_meshdata"],
        "float": ["speed"],
        "bool": ["is_awake"]
    },

    "PlayerController": {
        "float": ["speed", "jump_force", "sprint_timer"],
        "int": ["walk_direction"],
        "bool": ["is_grounded", "is_jumping", "can_jump"],
        "vec2": ["move_axes"],
        "entity": ["entity_camera"]
    },

    "ProjectileSpawner": {
        "Resource": ["projectile_material", "projectile_model", "projectile_sound"]
    },

    "RenderLayer": {
        "uint": ["renderLayer"]
    },

    "Rigidbody": {
        "Resource": [ "solver" ],
        "vec3": [ "gravity", "angular_velocity", "linear_velocity", "force_impulse", "force_velocity", "torque" ],
        "float": [ "mass", "static_friction", "dynamic_friction", "inverse_mass", "inverse_inertia" ],
        "bool": ["is_kinematic", "disable_rotation"]
    },

    "SwordController": {
        "int": ["last_direction", "weapon_state"],
        "float": ["state_timer", "charge_time"],
        "entity": [ "entity_camera", "entity_flock" ]
    },

    "Transform": {
        "vec3": [ "position", "world_position", "orientation", "scale", "forward" ],
        "mat4": [ "model" ],
        "bool": [ "has_parent" ],
        "entity": [ "parent_entity_id" ]
    },

    "Weapon": {
        "float": ["damage"],
        "vec3": ["pos_starting", "rot_starting"],
        "entity": [ "entity_camera" ]
    },

    "WeaponSway": {
        "float": ["sway_amount", "move_step_time"]
    }
}
